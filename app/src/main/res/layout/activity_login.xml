<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!--
        TODO: Check that all textboxes display the first part of the text (Robert Zaharia)
        TODO: Change text and replace log in with google to correct image (Rober Zaharia)
    -->


    <TextView
        android:id="@+id/welcome_textView"
        android:ems="10"
        android:orientation="vertical"
        android:text="@string/welcome"
        android:textColor="@color/sign_in_green_color"
        android:textSize="30sp"
        android:layout_marginTop="36dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/email_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="36dp"
        app:layout_constraintVertical_bias="0.46" />

    <EditText
        android:id="@+id/password_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/email_textView"
        />


    <Button
        android:id="@+id/email_login_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/or_textView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or"
        android:textColor="#1B5E20"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="0.492" />

    <ImageButton
        android:id="@+id/sign_in_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/btngoogle" />

    <TextView
        android:id="@+id/sign_up_textView"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/don_t_have_an_account_sign_up"
        android:layout_marginTop="20dp"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_login_button"
        tools:text=""
        />
    <TextView
        android:id="@+id/message2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email_login_button"
        tools:text=""
        />
</LinearLayout>