<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/nav_view_btns"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    app:layout_constraintTop_toBottomOf="@id/navigation_header_container"
    app:layout_constraintBottom_toTopOf="@id/nav_view_menu"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_prophile_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="48dp"
        android:src="@drawable/ic_user"
        app:civ_border_width="1.5dp"
        app:civ_border_color="#707070"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:text="@string/username_username"
        app:layout_constraintStart_toEndOf="@+id/image_prophile_photo"
        app:layout_constraintTop_toTopOf="@+id/nav_view_btns"
        tools:layout_editor_absoluteY="16dp" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="5dp"
        android:text="@string/mail_mail_com"
        app:layout_constraintBottom_toBottomOf="@+id/nav_view_btns"
        app:layout_constraintStart_toEndOf="@+id/image_prophile_photo" />

</androidx.constraintlayout.widget.ConstraintLayout>