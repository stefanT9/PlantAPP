<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <!--
    TODO: De verficat si modificat marginile (Alex Barsan)
    -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Welcome!"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="#1D5833"
        android:textSize="27sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="35dp"
        android:background="#ECECEC"
        android:ems="10"
        android:hint="Username (ex: firstname.name)"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/regEmail"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"

        android:layout_marginHorizontal="36dp"
        android:background="#ECECEC"
        android:ems="10"
        android:hint="Email adress"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="36dp"
        android:background="#ECECEC"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColor="#050000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regEmail" />

    <Button
        android:id="@+id/btn_Register"
        android:layout_width="198dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/gradient"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/regPassword" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="OR"
        android:textColor="#1D5833"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Register" />

    <ImageButton
        android:id="@+id/sign_in_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="254dp"
        android:layout_height="52dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/btngoogle" />

    <TextView
        android:id="@+id/regLogin"
        android:layout_width="221dp"
        android:layout_height="33dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="677dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="16dp"
        android:text="@string/Account"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />



</LinearLayout>