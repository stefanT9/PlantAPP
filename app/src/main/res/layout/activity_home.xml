<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/primaryColor">

    <!-- TODO: Remove hardcoded strings and colors and move them to the specific xml ( Teodora Balan ) -->

    <ImageButton
        android:id="@+id/svgBackground_Image"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@color/primaryColor"
        app:srcCompat="@drawable/svgbckk" />

    <ImageButton
        android:id="@+id/scanPlant_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/primaryColor"

        app:srcCompat="@drawable/scanbtn" />

    <ImageButton
        android:id="@+id/uploadPhoto_imgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/primaryColor"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/uploadbtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/botanictext"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
